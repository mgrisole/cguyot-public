---
import { Picture } from "astro:assets";
import logo from "../assets/logo.png";
import { BiRegularBadge, BiRegularPhone } from "solid-icons/bi";
import { CenteredBlock } from "@components";
---

<div class={"flex w-full text-independence justify-center"}>
  <CenteredBlock>
    <div class="flex justify-between">
      <div class="text-2xl">
        <Picture
          src={logo}
          class="w-[170px]"
          formats={["avif", "webp"]}
          loading="eager"
          alt=""
        />
      </div>
      <div class="flex gap-6 items-center">
        <div class="flex gap-5 items-center">
          <a
            href={`tel:+33687702591`}
            aria-label="Appel +33687702591"
            class={"flex items-center gap-3"}
          >
            <div class={"hidden text-sm underline sm:flex"}>+33687702591</div>
            <BiRegularPhone class="text-3xl cursor-pointer" />
          </a>
          <a href="#services" aria-label="Voir les tarifs"
            ><BiRegularBadge class="text-3xl cursor-pointer" /></a
          >
        </div>
      </div>
    </div>
  </CenteredBlock>
</div>
