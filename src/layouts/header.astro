---
import {Icon} from "astro-icon/components";
import {Image} from "astro:assets";
import logo from "../assets/logo.png";
---


<div class={"flex w-full text-independence"}>
  <div class="flex-1 title-1">
    <div class="text-2xl">
      <Image
        src={logo}
        class="w-[170px]"
        format="avif"
        loading="eager"
        alt=""
      />
    </div>
  </div>
  <div class="flex gap-6 items-center">
    <div class="flex gap-5 items-center">
      <a href={`tel:+33687702591`} class={"flex items-center gap-3"}>
        <div class={"hidden text-sm underline sm:flex"}>+33687702591</div>
        <Icon name="bx-phone" class="text-3xl cursor-pointer" />
      </a>
      <Icon name="bx-badge" class="text-3xl cursor-pointer" />
    </div>
  </div>
</div>
