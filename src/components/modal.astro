---
const { id } = Astro.props;
---

<button class="md:flex-grow-0 md:text-left" onclick=`${id}.showModal()`
  ><slot name="title" /></button
>

<dialog {id} class="modal">
  <div class="modal-box">
    <slot name="content" />
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>fermer</button>
  </form>
</dialog>
