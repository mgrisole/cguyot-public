---
import { Image } from "astro:assets";
import type {ImageMetadata} from "astro";

interface Props {
  img?: {url: ImageMetadata, alt: string, loading?: "eager" | "lazy"};
  darkColor?: boolean;
  reverse?: boolean;
}

const { img, darkColor = false, reverse = false } = Astro.props;
---

<div
  class={`flex flex-col gap-8 items-center md:flex-row ${reverse ? "md:flex-row-reverse" : "md:flex-row"}`}
>
  {img &&
    <div class="flex-1">
      <Image src={img.url} alt={img.alt} loading={img.loading || "lazy"}/>
    </div>
  }
  <div class="flex flex-col flex-1 w-full">
    <div class="font-serif text-2xl mb-6">
      <slot name="title" />
    </div>
    <div
      class={`h-[1px] w-1/2 mb-9 ${darkColor ? "bg-independence" : "bg-baby-powder"}`}
    >
    </div>
    <slot />
  </div>
</div>
